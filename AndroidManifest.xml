<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.progressiveauthentication">

        <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />



    <uses-permission android:name="android.permission.ACCESS_PROGESSIVE_AUTHENTICATION_SERVICE"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.android.progressiveauthentication.PasswordAuthenticate"
            android:label="@string/app_name" >
        </activity>
        <activity android:name="com.android.progressiveauthentication.PasscodeAuthentication">
            
        </activity>
        <activity
            android:name="com.android.progressiveauthentication.ProgressiveAuthenticationActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.android.progressiveauthentication.SetPasswordActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service
            android:name="com.android.progressiveauthentication.PublicAuthService"
            android:process=":publicauthservice"
            android:exported="true">
            <intent-filter>
                <action android:name="com.android.progressiveauthentication.IPublicAuthServices" />
            </intent-filter>
		</service>
		<service 
		    android:name="com.android.progressiveauthentication.AuthService"
            android:process=":authservice"
            android:exported="false">
		</service>
		<receiver android:name="com.android.progressiveauthentication.BootCompletedReceiver" >
		    <intent-filter>
		        <action android:name="android.intent.action.BOOT_COMPLETED" />
		    </intent-filter>
		</receiver>
		<provider
            android:authorities="com.android.progressiveauthentication.contentprovider"
            android:multiprocess="true"
            android:readPermission="com.progressiveauth.contentprovider.READ_PERMISSION"
            android:writePermission="com.progressiveauth.contentprovider.WRITE_PERMISSION"
            android:name="AuthProvider" >
		</provider> 
    </application>

    <permission android:name="com.progressiveauth.contentprovider.WRITE_PERMISSION"
    	android:protectionLevel="signature">
	</permission>

	<permission android:name="com.progressiveauth.contentprovider.READ_PERMISSION"
	        	android:protectionLevel="signature">
	</permission>
</manifest>
